---
interface Props {
  title: string;
  body: string;
  href: string;
  img: string;
}

const { img, href, title, body } = Astro.props;
---

<li class="link-card elemento-revelar">
  <a href={href} target="_blank" rel="noopener noreferrer" title={title}>
    <img src={img} alt="Imagen del proyecto" width="100" height="100" />
    <h2>{title}</h2>
    <slot />
    <p>{body}</p>
    <span>&rarr;</span>
  </a>
</li>

<style>
  .link-card {
    list-style: none;
    display: flex;
    padding: 1px;
    background-color: var(--color-base);
    background-image: none;
    background-size: 400%;
    border-radius: 7px;
    background-position: 100%;
    transition:
      background-color 0.3s ease,
      transform 0.3s ease,
      box-shadow 0.3s ease;
    box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.1);
  }
  .link-card > a {
    width: 100%;
    text-decoration: none;
    line-height: 1.4;
    padding: calc(2rem - 1px) calc(1.8rem - 1px);
    border-radius: 8px;
    color: white;
    background-color: #23262d;
    opacity: 0.8;
  }

  img {
    margin: 0 auto;
    width: 100%;
    height: 250px;
    object-fit: cover;
    border-radius: 8px;
    margin-bottom: 0.5rem;
    image-rendering: optimizeQuality;
  }

  h2 {
    padding-top: 10px;
    margin: 0;
    font-size: 1.25rem;
    font-weight: 700;
  }
  p {
    margin: auto;
    margin-bottom: 1rem;
    text-wrap: pretty;
  }

  .link-card:hover {
    background-color: #374151;
    transform: translateY(-3px);
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.3);
  }
  span {
    margin-left: auto;
    font-size: 1.5rem;
    color: var(--accent);
    position: absolute;

    right: 2rem;
    bottom: 1rem;
  }
</style>
